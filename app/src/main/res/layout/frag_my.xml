<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="我的"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:textColor="@color/colorBlack"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/button_shopping"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/my_item_image"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/default_avatar" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/my_item_image"
                   android:layout_centerInParent="true"
                   android:layout_toLeftOf="@id/my_item_image"
                   android:text="登录"
                   android:textColor="@color/colorAccent"
                   android:textSize="18sp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/my_item_image"
                   android:layout_centerInParent="true"
                   android:layout_toRightOf="@id/my_item_image"
                   android:text="注册"
                   android:textColor="@color/colorAccent"
                   android:textSize="18sp" />
           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="2px"
               android:background="@color/colorGraye" />

           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:gravity="center"
                   android:text="关注的人"
                   android:textColor="@color/colorGray9" />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:gravity="center"
                   android:text="我的粉丝"
                   android:textColor="@color/colorGray9"

                   />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:gravity="center"
                   android:text="我的收藏"
                   android:textColor="@color/colorGray9"

                   />
           </RadioGroup>

           <View
               android:layout_width="match_parent"
               android:layout_height="7dp"
               android:background="@color/colorGraye" />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_marginLeft="10dp"
                   android:gravity="center"
                   android:text="我的订单"
                   android:textColor="@color/cardview_dark_background"
                   android:textSize="18sp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="20dp"
                   android:drawableRight="@mipmap/icon_topicdetail_next"
                   android:gravity="center"
                   android:text="全部订单" />
           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="2px"
               android:background="@color/colorGraye" />

           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawableTop="@mipmap/icon_will_give_money"
                   android:gravity="center"
                   android:text="待付款"
                   android:textColor="@color/colorGray9" />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawableTop="@mipmap/icon_will_send_goods"
                   android:gravity="center"
                   android:text="代发货"
                   android:textColor="@color/colorGray9"

                   />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawableTop="@mipmap/icon_will_receive_goods"
                   android:gravity="center"
                   android:text="待收货"
                   android:textColor="@color/colorGray9"

                   />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawableTop="@mipmap/icon_my_wait_evaluation"
                   android:gravity="center"
                   android:text="待评价"
                   android:textColor="@color/colorGray9"

                   />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawableTop="@mipmap/icon_will_return_goods"
                   android:gravity="center"
                   android:text="退款/退货"
                   android:textColor="@color/colorGray9" />
           </RadioGroup>
           <View
               android:layout_width="match_parent"
               android:layout_height="7dp"
               android:background="@color/colorGraye"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="我的福利"
               android:textColor="@color/colorBlack"
               android:textSize="18sp"
               android:gravity="center_vertical"
               android:layout_marginLeft="10dp"
               />

           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="60dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:gravity="center"
                   android:text="会员专享"
                   android:drawableTop="@mipmap/icon_my_vip"
                   android:textColor="@color/colorGray9" />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="60dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:gravity="center"
                   android:drawableTop="@mipmap/icon_my_coupon"
                   android:text="优惠券(兑换优惠券)"
                   android:textColor="@color/colorGray9"
                   />

               <RadioButton
                   android:layout_width="0dp"
                   android:layout_height="60dp"
                   android:layout_weight="1"
                   android:button="@null"
                   android:gravity="center"
                   android:text="我的红包"
                   android:drawableTop="@mipmap/icon_my_red"
                   android:textColor="@color/colorGray9"

                   />
           </RadioGroup>
           <View
               android:layout_width="match_parent"
               android:layout_height="7px"
               android:background="@color/colorGraye"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="我的收货地址"
               android:textColor="@color/colorBlack"
               android:textSize="18sp"
               android:gravity="center_vertical"
               android:layout_marginLeft="10dp"
               /> <TextView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="我的发帖"
           android:textColor="@color/colorBlack"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:layout_marginLeft="10dp"
           /> <TextView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="我关注的品牌"
           android:textColor="@color/colorBlack"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:layout_marginLeft="10dp"
           /> <TextView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="我关注的标签"
           android:textColor="@color/colorBlack"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:layout_marginLeft="10dp"
           />
           <View
               android:layout_width="match_parent"
               android:layout_height="7px"
               android:background="@color/colorGraye"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="设置"
               android:textColor="@color/colorBlack"
               android:textSize="18sp"
               android:gravity="center_vertical"
               android:layout_marginLeft="10dp"
               /> <TextView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="帮助与反馈"
           android:textColor="@color/colorBlack"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:layout_marginLeft="10dp"
           /> <TextView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="明星衣橱客服: 400-650-6468"
           android:textColor="@color/colorBlack"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:layout_marginLeft="10dp"
           />
       </LinearLayout>

   </ScrollView>
</LinearLayout>